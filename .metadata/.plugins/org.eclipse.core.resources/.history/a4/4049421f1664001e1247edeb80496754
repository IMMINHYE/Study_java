//		 Q2. 구구단 - 짝수 단만 출력
		int i;
		int j;
		for (i=1; i<=9; i++) {
			for (j=1; j<=9; j++) {
				if (i % 2 == 1)
					continue;
				System.out.println("1번");
				System.out.println(i + " X " + j + "=" + i*j);
			}
		}
		
//		 Q3. 구구단 - 단보다 곱하는 수가 작거나 같은 경우까지만 출력
		for (i=1; i<=9; i++) {
			for (j=1; j<=9; j++) {
				if (i < j)
					break;
				System.out.println("3번");
				System.out.println(i + " X " + j + "=" + i*j);
			}
		}
		
		// Q4. 반복문 사용 - 피라미드
		int row = 4;
		System.out.println("4번");
		for (i = 0; i < row; i++) {
			for (j = 1; j < row - i; j++) {
				System.out.print(" ");
			}
			for (int k = 0; k < i * 2 + 1; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		// Q5. 반복문 사용 - 상하 대칭 피라미드
//		for (i = 0; i < row; i++) {
//			for (j = 1; j < row - i; j++) {
//				System.out.print(" ");
//			}
//			for (k = 0; k < i * 2 + 1; k++) {
//				System.out.print("*");
//			}
//			System.out.println();			
//		}
//		for (i = row - 1; i > 0; i--) {
//			for (j = row - 1 ; j > 0 ; j--) {
//				System.out.print(" ");						
//			}
//			for (k = i * 2 - 1 ; k > 0 ; k--) {
//				System.out.print("*");
//			}
//			System.out.println();
//		}	
	}
}
